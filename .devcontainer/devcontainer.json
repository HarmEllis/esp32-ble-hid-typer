{
  "name": "ESP32 BLE HID Typer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "node",
  "remoteEnv": {
    "IDF_PATH": "/opt/esp/idf",
    "IDF_TOOLS_PATH": "/opt/esp",
    "IDF_PYTHON_CHECK_CONSTRAINTS": "no",
    "IDF_CCACHE_ENABLE": "1"
  },
  "mounts": [
    "source=${localEnv:HOME}/.claude,target=/home/node/.claude,type=bind,consistency=cached",
    "source=${localEnv:HOME}/.claude.json,target=/home/node/.claude.json,type=bind,consistency=cached"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "espressif.esp-idf-extension",
        "esbenp.prettier-vscode",
        "dbaeumer.vscode-eslint",
        "Anthropic.claude-code",
        "github.vscode-github-actions",
        "ms-vscode.cpptools-extension-pack"
      ],
      "settings": {
        "idf.espIdfPath": "/opt/esp/idf",
        "idf.toolsPath": "/opt/esp",
        "terminal.integrated.defaultProfile.linux": "bash"
      }
    }
  },
  "postCreateCommand": "bash -c '. /etc/profile.d/esp-idf.sh && echo \"=== Environment Check ===\" && echo \"ESP-IDF: $(idf.py --version)\" && echo \"Node.js: $(node --version)\" && echo \"npm: $(npm --version)\" && echo \"=== All OK ===\"'",
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}"
}
